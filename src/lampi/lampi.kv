# vim: set ft=yaml:
#:kivy 1.9

BoxLayout:
  orientation: "vertical"

  LampiSlider:
    id: hue
    min: 0
    max: 360
    on_value: app.hue = self.value

  LampiSlider:
    id: saturation
    min: 0
    max: 100
    on_value: app.saturation = self.value

  LampiSlider:
    id: brightness
    min: 0
    max: 100
    on_value: app.brightness = self.value

  LampiOnOffButton:
    on_press: app.on = self.get_on_then_toggle()

